<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.umariana.sistemas.notascal.MainActivity">

    <TextView
        android:text="Primera Nota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="85dp"
        android:id="@+id/n1" />

    <TextView
        android:text="Segunda Nota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/n1"
        android:layout_alignStart="@+id/n1"
        android:layout_marginTop="51dp"
        android:id="@+id/n2" />

    <TextView
        android:text="tercera Nota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/n2"
        android:layout_alignStart="@+id/n2"
        android:layout_marginTop="43dp"
        android:id="@+id/n3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/t1"
        android:layout_alignBaseline="@+id/n1"
        android:layout_alignBottom="@+id/n1"
        android:layout_toEndOf="@+id/n2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/t2"
        android:layout_alignBaseline="@+id/n2"
        android:layout_alignBottom="@+id/n2"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_below="@+id/t2"
        android:layout_toEndOf="@+id/n3"
        android:layout_marginTop="16dp"
        android:id="@+id/t3" />

    <Button
        android:text="Calcular Nota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:id="@+id/button"
        android:layout_below="@+id/t3"
        android:layout_alignEnd="@+id/n2" />

    <Button
        android:text="Nota Faltante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_alignTop="@+id/button"
        android:layout_alignEnd="@+id/t3"
        android:layout_marginEnd="19dp" />

    <Button
        android:text="Acerca de..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_alignStart="@+id/n3"
        android:layout_marginStart="62dp"
        android:layout_marginTop="21dp"
        android:id="@+id/button3" />

    <TextView
        android:text="Resultado..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button2"
        android:layout_alignStart="@+id/n3"
        android:layout_marginBottom="15dp"
        android:id="@+id/r1" />
</RelativeLayout>
